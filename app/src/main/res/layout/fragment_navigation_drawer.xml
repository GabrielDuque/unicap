<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.thm.unicap.app.menu.NavigationDrawerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unicap_gray_level_2"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_header_container"
        android:translationY="-70dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/unicap_gray_level_4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_header_picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/picture"
            android:src="@drawable/ic_graduate"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_very_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_header_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Ciência da Computação"/>

            <TextView
                android:id="@+id/nav_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Túlio Hoffimann Mendes"/>

            <TextView
                android:id="@+id/nav_header_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="tuliohmendes@gmail.com"/>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:translationY="-70dp"
        android:id="@+id/navigation_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/unicap_gray_level_2"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>

</LinearLayout>