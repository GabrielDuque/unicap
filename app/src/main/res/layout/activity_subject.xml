<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".subject.SubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Código:"
            app:typeface="roboto_thin"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:drawableLeft="@drawable/ic_action_accounts"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="INF6542"
            app:typeface="roboto_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Carga Horária:"
            app:typeface="roboto_thin"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:drawableLeft="@drawable/ic_action_time"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="60 Horas"
            app:typeface="roboto_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Créditos:"
            app:typeface="roboto_thin"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:drawableLeft="@drawable/ic_action_important"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="4 Créditos"
            app:typeface="roboto_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Período:"
            app:typeface="roboto_thin"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:drawableLeft="@drawable/ic_action_go_to_today"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="6º Período"
            app:typeface="roboto_regular"/>

    </LinearLayout>

    <!--
    agenda*
    code
    workload
    credits
    period
    color
    abbreviation
    -->

</LinearLayout>
