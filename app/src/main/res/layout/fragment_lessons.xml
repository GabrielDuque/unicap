<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unicap_gray_level_1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.thm.unicap.app.lessons.WeekdayLessonsCard
            android:id="@+id/card_lessons_mon"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.thm.unicap.app.lessons.WeekdayLessonsCard
            android:id="@+id/card_lessons_tue"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.thm.unicap.app.lessons.WeekdayLessonsCard
            android:id="@+id/card_lessons_wed"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.thm.unicap.app.lessons.WeekdayLessonsCard
            android:id="@+id/card_lessons_thu"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.thm.unicap.app.lessons.WeekdayLessonsCard
            android:id="@+id/card_lessons_fri"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.thm.unicap.app.lessons.WeekdayLessonsCard
            android:id="@+id/card_lessons_sat"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>