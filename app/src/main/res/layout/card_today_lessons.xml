<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/margin_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="23sp"
        android:text="@string/today"
        app:typeface="roboto_condensed_regular"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/subject_name_abbreviation1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/margin_small"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="30sp"
            android:text="PLP"
            android:background="@android:color/holo_blue_light"
            app:typeface="roboto_bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/subject_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paradigmas de Linguagens de Programação"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                app:typeface="roboto_thin"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bar1"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_place"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A601"
                    android:layout_marginRight="@dimen/margin_small"
                    app:typeface="roboto_thin"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_time"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:30"
                    app:typeface="roboto_thin"/>

            </LinearLayout>

            <View
                android:id="@+id/bar1"
                android:background="@color/unicap_really_light_gray"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <View
                android:background="@color/unicap_base"
                android:layout_alignParentBottom="true"
                android:layout_width="100dp"
                android:layout_height="10dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/subject_name_abbreviation2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/margin_small"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="30sp"
            android:text="MN"
            android:background="@android:color/holo_purple"
            app:typeface="roboto_bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/subject_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métodos Numéricos"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                app:typeface="roboto_thin"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bar2"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_place"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A602"
                    android:layout_marginRight="@dimen/margin_small"
                    app:typeface="roboto_thin"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_time"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:30"
                    app:typeface="roboto_thin"/>

            </LinearLayout>

            <View
                android:id="@+id/bar2"
                android:background="@color/unicap_really_light_gray"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <View
                android:background="@color/unicap_base"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>