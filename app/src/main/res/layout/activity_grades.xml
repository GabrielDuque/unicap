<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grades.GradesActivity">

    <include layout="@layout/main_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/unicap_gray_level_1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <it.gmariotti.cardslib.library.view.CardView
                android:id="@+id/card_list_item"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <it.gmariotti.cardslib.library.view.CardView
                android:id="@+id/card_situation"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <it.gmariotti.cardslib.library.view.CardView
                android:id="@+id/card_grades"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <it.gmariotti.cardslib.library.view.CardView
                android:id="@+id/card_grades_progress"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
